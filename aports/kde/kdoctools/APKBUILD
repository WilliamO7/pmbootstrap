# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kdoctools
pkgver=5.39.0
pkgrel=0
pkgdesc='Documentation generation from docbook'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL-2.1"
depends="docbook-xsl"
depends_dev="qt5-qtbase-dev ki18n-dev karchive-dev libxslt-dev libxml2-dev"
makedepends="$depends_dev extra-cmake-modules perl-uri"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}


package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}

sha512sums="a9ef804175ed465753bcac7bee2d92a7a17f24b0c778d86c9a05aa09e643f949ee388e5133249bc27e13fbea7944fa10906a75e894806094700eb25b6971b95c  kdoctools-5.39.0.tar.xz"
