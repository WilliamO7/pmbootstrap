# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kpty
pkgver=5.39.0
pkgrel=1
pkgdesc='Pty abstraction'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
depends_dev="kcoreaddons-dev ki18n-dev"
makedepends="$depends_dev extra-cmake-modules qt5-qttools-dev doxygen"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
options="!check" # Not sure: "Can't open a pseudo teletype"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	make
}

check() {
	cd "$builddir"
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"
	make DESTDIR="${pkgdir}" install
}
sha512sums="f830b39fe073377280ee896147b6f0b504c8bdad42976b0bab8027a50f6b3540e0ab6a21012417fbd70bd1a04c8109452330f2acd90ab925ccaf061e2d99f0d9  kpty-5.39.0.tar.xz"
